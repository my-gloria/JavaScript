  <script>
//ðŸ¥‡ðŸ‘Œ Hover effect on product cards (zoom slightly)ðŸ‘ŒðŸ¥‡
const cards = document.querySelectorAll(".product-card");

cards.forEach(card => {
    card.addEventListener("mouseenter", () => {
        card.style.transform = "scale(1.05)";
        card.style.transition = "0.3s";
        card.style.boxShadow = "0 5px 15px rgba(0,0,0,0.3)";
    });
    card.addEventListener("mouseleave", () => {
        card.style.transform = "scale(1)";
        card.style.boxShadow = "0 2px 5px rgba(0,0,0,0.1)";
    });
});

// ðŸ¥ˆðŸ‘ŒClick "Add to see more" buttons to highlight cardðŸ‘ŒðŸ¥ˆ
const buttons = document.querySelectorAll(".product-card button");

buttons.forEach(btn => {
    btn.addEventListener("click", (e) => {
        e.preventDefault(); // prevent default link behavior
        const card = btn.closest(".product-card");
        card.style.border = "5px solid red";
        card.style.backgroundColor = "#e0ffe0"; // slight green highlight
        alert("You clicked Add to see more!");
    });
});

// ðŸ¥‰ðŸ‘ŒCount checked boxes in the sidebarðŸ‘ŒðŸ¥‰
const checkboxes = document.querySelectorAll("aside input[type=checkbox]");

checkboxes.forEach(cb => {
    cb.addEventListener("change", () => {
        const checkedCount = document.querySelectorAll("aside input[type=checkbox]:checked").length;
        console.log(`Sections selected: ${checkedCount}`);
    });
});

// 4ï¸âƒ£ðŸ‘ŒToggle product info text on button clickðŸ‘Œ4ï¸âƒ£
cards.forEach(card => {
    const btn = card.querySelector("button");
    const info = card.querySelector(".product-info p, .product-info ol");
    
    btn.addEventListener("click", () => {
        if(info.style.display === "none"){
            info.style.display = "block";
        } else {
            info.style.display = "none";
        }
    });
});
</script>

